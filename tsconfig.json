{
  "compilerOptions": {
    "target": "ES2022",
    "module": "nodenext",
    "rootDir": ".",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["models", "routes", "types", "server.ts", "controllers", "middlewares", "config"],
  "exclude": ["node_modules"]
}